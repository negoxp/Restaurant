<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.jorgeflores.restaurant">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/minicon"
        android:label="@string/app_name"
        android:roundIcon="@drawable/minicon"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity" />
        <activity android:name=".Signup" />
        <activity android:name=".ResetPasswordActivity" />
        <activity android:name=".LoginActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".ProductSelectedActivity" />
        <activity
            android:name=".CheckoutActivity"
            android:label="Checkout"
            android:parentActivityName=".MainActivity" />
        <activity android:name=".BookingActivity" />
        <activity android:name=".RestaurantCommentsActivity" />
        <activity android:name=".ConfirmationActivity"></activity>
        <activity android:name=".FinalizeActivity"></activity>
        <activity android:name=".AboutUsActivity"></activity>
    </application>

</manifest>